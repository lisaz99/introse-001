USE `introse-001_2015-04-21`;
ALTER TABLE `data_users_attributes` ADD `achievement_level_new` varchar(255) AFTER `achievement_level`;


UPDATE `data_users_attributes`
SET `achievement_level_new` = (
            CASE
						WHEN normal_grade = 0 THEN 'none' -- if this is executed, then we are out of the loop (matches all zero people)
                        WHEN achievement_level = 'none' THEN 'more_than_none_less_than_normal' -- only get here, if grade > =0
                        WHEN achievement_level = 'normal' THEN 'normal'
                        WHEN achievement_level = 'distinction' THEN 'distinction'
                        ELSE NULL
            END)
            
